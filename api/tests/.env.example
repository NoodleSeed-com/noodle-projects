# Test environment variables
# Copy this to .env for local test configuration

# Database connections
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/test
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/test

# Test mode flag (enables special test behavior)
TEST_MODE=true

# OpenRouter API key for tests
OPENROUTER_API_KEY=test-key

# Supabase credentials for integration tests
# Only needed if running integration tests with Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# Test flags
RUN_SLOW_TESTS=false
RUN_EXTERNAL_TESTS=false